# EditorConfig helps maintain consistent coding styles
root = true

# Basic settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown files — do not remove spaces at the end (for lists, etc.)
[*.md]
trim_trailing_whitespace = false

# JSON, YAML, yml — standard style 2 spaces
[*.{json,yml,yaml}]
indent_size = 2

# Makefiles and the like - tabs are mandatory
[Makefile]
indent_style = tab
